{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@root/*": ["/*"],
      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@utils/*": ["utils/*"],
      "@libs/*": ["libs/*"],
      "@routes/*": ["routes/*"],
      "@styles/*": ["styles/*"],
      "@stories/*": ["stories/*"],
      "@views/*": ["views/*"],
      "@xample/*": ["xample/*"]
    }
  },
  "include": ["src"]
}
